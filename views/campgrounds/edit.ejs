<% include ../partials/header %>







    <div class="row">
        <h1 style="text-align: center;">Edit <%=campgrounds.name%></h1>
        <div style='width: 30%; margin: 30px auto;'>
            <form action='/campgrounds/<%= campgrounds._id %>?_method=PUT' method='POST' enctype="multipart/form-data">
                <div class='form-group'>
                    <label for="name">Name</label>
                    <input class="form-control" id='name' type='text' name='name' value="<%=campgrounds.name%>">
                </div>
                <div class='form-group'>
                    <label for="price">Price</label>
                    <input class="form-control" id='price' type='number' name='price' value="<%=campgrounds.price%>" min="0.01" step="0.01">
                </div>
                <div class='form-group'>
                    <label for="image">Image</label>
                    <div class="thumbnail"><img src='<%=campgrounds.image.path%>'></div>
                    
                    <input class="form-control" id="image" type='file' name='image' accept="image/*" value='<%=campgrounds.image%>'>
                </div>
                <div class='form-group'>
                    <label for="description">Description</label>
                    <input class="form-control" id="description" type='text' name='description' value="<%=campgrounds.description%>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campgrounds.location %>">
                </div>
                <div class='form-group'>
                    <button class="btn btn-lg btn-default btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campgrounds._id %>"> Go Back </a>
        </div>
        
    </div>






<% include ../partials/footer %>